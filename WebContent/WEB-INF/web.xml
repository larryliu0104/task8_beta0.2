<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>Favorites Website</display-name>
	<description>
      Configuration file for the Favorites website
    </description>

	<servlet>
		<servlet-name>favorites-controller</servlet-name>
		<servlet-class>controller.main.Controller</servlet-class>
		<init-param>
			<param-name>jdbcDriverName</param-name>
			<param-value>   com.mysql.jdbc.Driver   </param-value>
		</init-param>
		<init-param>
			<param-name>jdbcURL</param-name>
			<param-value>   jdbc:mysql:///test    </param-value>
		</init-param>
	</servlet>


	<servlet-mapping>
		<servlet-name>favorites-controller</servlet-name>
		<url-pattern>    /depositCheck                     </url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>favorites-controller</servlet-name>
		<url-pattern>    /transitionDay                     </url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>favorites-controller</servlet-name>
		<url-pattern>/requestCheck</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>favorites-controller</servlet-name>
		<url-pattern>/buyFund</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>favorites-controller</servlet-name>
		<url-pattern>/viewPortfolio</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>favorites-controller</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>favorites-controller</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>


	
</web-app>
